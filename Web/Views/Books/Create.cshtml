@model Eshop.Domain.Domain.Book
@{
    ViewData["Title"] = "Create New Book";
}

<div class="form-container">
    <div class="form-header">
        <h1>Create New Book</h1>
        <a asp-action="Index" class="back-link">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="form-content">
        <form asp-action="Create" class="book-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="ISBN" class="control-label">ISBN</label>
                    <input asp-for="ISBN" class="form-control" placeholder="Enter ISBN" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group full-width">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter book description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Date" class="control-label">Publication Date</label>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Price</label>
                    <input asp-for="Price" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group full-width">
                    <label asp-for="PictureUrl" class="control-label">Picture URL</label>
                    <input asp-for="PictureUrl" class="form-control" placeholder="Enter image URL" />
                    <span asp-validation-for="PictureUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Authors" class="control-label">Authors</label>
                    <div class="select-with-action">
                        <select asp-for="AuthorIds" asp-items="ViewBag.Authors" class="form-control" multiple>
                        </select>
                        <a asp-controller="Authors" asp-action="Create" class="btn btn-outline-primary add-new-btn">
                            <i class="fas fa-plus"></i> New Author
                        </a>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Publisher" class="control-label">Publisher</label>
                    <select asp-for="PublisherId" asp-items="ViewBag.Publishers" class="form-control">
                        <option value="">-- Select Publisher --</option>
                    </select>
                    <a asp-controller="Publishers" asp-action="Create" class="btn btn-outline-primary add-new-btn">
                        <i class="fas fa-plus"></i> New Publisher
                    </a>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create Book
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}