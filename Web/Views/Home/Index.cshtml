@{
    ViewData["Title"] = "Home";
}

<div class="home-sections">
    <!-- Hero Section (below banner) -->
    <section class="welcome-section">
        <h1>Discover Your Next Story</h1>
        <p class="lead">Your local bookstore with a carefully curated collection of classics, bestsellers, and hidden gems.</p>
    </section>

    <!-- Featured Deals Section -->
    <section class="deals-section">
        <div class="section-header">
            <h2>Current Deals</h2>
        </div>
        <div class="deals-grid">
            <div class="deal-card">
                <i class="fas fa-book-open"></i>
                <h3>Buy 2 Get 1 Free</h3>
                <p>On all fiction books this week</p>
            </div>
            <div class="deal-card">
                <i class="fas fa-graduation-cap"></i>
                <h3>Student Discount</h3>
                <p>20% off with valid student ID</p>
            </div>
            <div class="deal-card">
                <i class="fas fa-users"></i>
                <h3>Book Club Membership</h3>
                <p>Join now and save 15% on every purchase</p>
            </div>
        </div>
    </section>

    <!-- About Us Section -->
    <section class="about-section">
        <div class="section-header">
            <h2>About Us</h2>
        </div>
        <div class="about-content">
            <div class="about-text">
                <p>Welcome to your neighborhood bookstore, where every book tells a story and every reader finds their perfect match. Since 2020, we've been more than just a bookstore - we're a community hub for book lovers.</p>
                <p>Our carefully curated collection spans across all genres, ensuring there's something for every reader. From timeless classics to contemporary bestsellers, from scholarly works to children's favorites, we pride ourselves on offering quality literature for all ages and interests.</p>
            </div>
            <div class="features-grid">
                <div class="feature">
                    <i class="fas fa-book"></i>
                    <h4>Vast Selection</h4>
                    <p>Over 10,000 titles across all genres</p>
                </div>
                <div class="feature">
                    <i class="fas fa-coffee"></i>
                    <h4>Reading Café</h4>
                    <p>Cozy space to enjoy your new book</p>
                </div>
                <div class="feature">
                    <i class="fas fa-calendar-alt"></i>
                    <h4>Events</h4>
                    <p>Regular author meets and book clubs</p>
                </div>
                <div class="feature">
                    <i class="fas fa-truck"></i>
                    <h4>Fast Delivery</h4>
                    <p>Free shipping on orders over $50</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter-section">
        <div class="newsletter-content">
            <h2>Stay Updated</h2>
            <p>Subscribe to our newsletter for the latest book releases and exclusive deals</p>
            <form class="newsletter-form">
                <input type="email" placeholder="Enter your email" class="form-control">
                <button type="submit" class="btn btn-primary">Subscribe</button>
            </form>
        </div>
    </section>
</div>