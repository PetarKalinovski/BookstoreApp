@model Eshop.Domain.Domain.Author
@{
    ViewData["Title"] = "Create New Author";
}

<div class="form-container">
    <div class="form-header">
        <h1>Create New Author</h1>
        <a asp-action="Index" class="back-link">
            <i class="fas fa-arrow-left"></i> Back to Authors
        </a>
    </div>

    <div class="form-content">
        <form asp-action="Create" class="author-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Author Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter author's name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group full-width">
                    <label asp-for="Biography" class="control-label">Biography</label>
                    <textarea asp-for="Biography" class="form-control" rows="6"
                              placeholder="Enter author's biography"></textarea>
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create Author
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}